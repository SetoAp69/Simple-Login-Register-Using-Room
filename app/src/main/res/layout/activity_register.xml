<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_label"
        android:text="Register"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/main"
        app:layout_constraintStart_toStartOf="@id/main"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email : "
        android:id="@+id/tv_label_email"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/tv_label"
        app:layout_constraintStart_toStartOf="@id/main"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#dff2f7"
        android:layout_marginHorizontal="18dp"
        android:hint="enter your email"
        android:paddingHorizontal="12dp"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toBottomOf="@id/tv_label_email"
        android:id="@+id/et_email"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password : "
        android:id="@+id/tv_label_password"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        app:layout_constraintStart_toStartOf="@id/main"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#dff2f7"
        android:layout_marginHorizontal="18dp"
        android:hint="create your password"
        android:paddingHorizontal="12dp"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toBottomOf="@id/tv_label_password"
        android:id="@+id/et_password"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password : "
        android:id="@+id/tv_label_password2"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        app:layout_constraintStart_toStartOf="@id/main"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#dff2f7"
        android:layout_marginHorizontal="18dp"
        android:hint="repeat your password"
        android:paddingHorizontal="12dp"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toBottomOf="@id/tv_label_password2"
        android:id="@+id/et_password2"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"

        />
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="25sp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/et_password2"
        app:layout_constraintStart_toStartOf="@id/main"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:id="@+id/tv_login"
        app:layout_constraintTop_toBottomOf="@id/btn_register"
        app:layout_constraintStart_toStartOf="@id/main"


        />



</androidx.constraintlayout.widget.ConstraintLayout>